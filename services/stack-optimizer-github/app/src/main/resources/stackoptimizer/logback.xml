<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProperty scope="context" name="MyApp" source="spring.application.name"/>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%cyan(%d{HH:mm:ss.SSS}) %gray([%thread]) %highlight(%-5level) %magenta(%logger{36}) - [${MyApp}, %X{traceId:-}, %X{spanId:-}, %X{Kong-Request-ID:-}] %msg%n </pattern>
        </encoder>
    </appender>
    <appender name="enhanced" class="com.blumeglobal.corelogger.feature.logback.EnhancedAppender"/>
    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="enhanced" />
    </root>
</configuration>